# RepliFast Environment Variables Example
# Copy this file to .env.local and fill in the actual values

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Custom Auth Domain for OAuth Proxy (Optional - for branded OAuth experience)
NEXT_PUBLIC_CUSTOM_AUTH_DOMAIN=auth.yourdomain.com
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your_google_oauth_client_id

# Stripe Configuration
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
NEXT_PUBLIC_STRIPE_BUTTON_ID=your_stripe_button_id
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_SITE_URL=https://www.replifast.com

# Google OAuth Configuration (for Google Business Profile integration)
GOOGLE_OAUTH_CLIENT_ID=your_google_oauth_client_id
GOOGLE_OAUTH_CLIENT_SECRET=your_google_oauth_client_secret
GOOGLE_OAUTH_REDIRECT_URI=http://localhost:3000/api/auth/google-business/callback

# Encryption Key for Google OAuth Credentials
CREDENTIALS_ENCRYPTION_KEY=your_32_character_encryption_key

# OpenAI Configuration (for AI reply generation)
OPENAI_API_KEY=your_openai_api_key

# Brevo Email Configuration
BREVO_API_KEY=your_brevo_api_key
BREVO_SENDER_EMAIL=noreply@replifast.com
BREVO_SENDER_NAME=RepliFast
BREVO_REPLY_TO_EMAIL=support@replifast.com
BREVO_REPLY_TO_NAME=RepliFast Support

# PostHog Analytics (Optional)
NEXT_PUBLIC_POSTHOG_KEY=your_posthog_key
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# Cloudflare Turnstile Configuration
NEXT_PUBLIC_TURNSTILE_SITE_KEY=your_turnstile_site_key
TURNSTILE_SECRET_KEY=your_turnstile_secret_key